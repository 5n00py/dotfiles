# Open PDF file with zathura
alias pdfopen='zathura'

# Download YouTube video with yt-dlp
# Usage: yt [youtube_url]
# This will download the video at [youtube_url].
alias yt='yt-dlp'

# Download YouTube music with yt-dlp
# Usage: ytm [youtube_url]
# This will download the audio of the video at [youtube_url] and convert it to mp3 format.
alias ytm='yt-dlp -x --audio-format mp3'

# Quickly access Bluetooth control tool with root privileges
alias bt='sudo bluetoothctl'
